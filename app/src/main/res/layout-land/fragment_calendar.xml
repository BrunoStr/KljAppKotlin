<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactCalendarView"
            android:layout_width="317dp"
            android:layout_height="0dp"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="18sp"
            app:compactCalendarBackgroundColor="#CC3C27"
            app:compactCalendarTextColor="#fff"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
            app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
            app:compactCalendarMultiEventIndicatorColor="#9cc24c"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthTxt" app:layout_constraintEnd_toStartOf="@+id/tabHost"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/monthTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Textview"
            android:gravity="center_vertical" android:background="#9cc24c" android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/compactCalendarView"
            app:layout_constraintEnd_toStartOf="@+id/tabHost" app:layout_constraintHorizontal_bias="0.0"/>

    <TabHost
            android:id="@+id/tabHost"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/compactCalendarView">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</androidx.constraintlayout.widget.ConstraintLayout>