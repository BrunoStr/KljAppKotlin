<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/contact_insta_text"
            android:layout_width="215dp"
            android:layout_height="38dp"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/instaLogo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="78dp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/fbLogo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="156dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/contact_fb_text"
            android:layout_width="215dp"
            android:layout_height="38dp"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fbLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="78dp" android:textAlignment="center"
    />
    <Button
            android:text="@string/contact_fb_btn"
            android:layout_width="242dp"
            android:backgroundTint="#9cc24c"
            android:layout_height="wrap_content"
            android:id="@+id/fbBtn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:textColor="@android:color/white"/>
    <Button
            android:text="@string/contact_insta_btn"
            android:layout_width="242dp"
            android:backgroundTint="#9cc24c"
            android:layout_height="wrap_content"
            android:id="@+id/instaBtn"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            style="@style/Widget.AppCompat.Button" android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/instaLogo"
            android:layout_marginEnd="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>