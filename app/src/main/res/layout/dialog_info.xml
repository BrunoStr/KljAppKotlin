<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="78dp"
            android:layout_height="63dp" app:srcCompat="@drawable/info_grey"
            android:id="@+id/infoImg"
            android:layout_centerHorizontal="true" android:layout_above="@+id/textView"
            android:layout_marginBottom="-84dp"/>
    <TextView
            android:text="Deze app werd mogelijk gemaakt door Bruno Stroobants"
            android:layout_width="246dp"
            android:layout_height="47dp" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/textView" android:layout_marginTop="84dp"
            android:textAlignment="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/close_grey"
            android:layout_alignParentTop="true" android:layout_alignEnd="@+id/textView" android:id="@+id/closeIcon"
            android:layout_marginTop="6dp" android:layout_marginEnd="3dp"/>
</RelativeLayout>